<% 

var value = 0;

var uitems = _.uniq(items, item => {
    return item.id
})

var hascode = false;

_.each(uitems, function(item){
    value += item['price' + item.period] * item.count

    if(item.giftcode) hascode = true
})


%>Payment accepted
<!--part-->
Congratulations! You are now a member of Wellai and have access to the AI-powered digital health assistant. <% if(hascode) {%> Here are your login code(s). <% } else { %> Here are your payment details. <% } %>
<!--part-->
<mjml>
    <mj-body>
        <mj-section>
        <mj-column>

            <mj-image width="100px" src="https://wellai.health/ai/img/wailogo.3f23ce58.png"></mj-image>

            <mj-divider border-color="#0059ff"></mj-divider>

            <mj-text font-family="Segue, Arial" font-size="36px" font-weight="100">
                Payment accepted
            </mj-text>
             <mj-text font-family="Segue, Arial">
                Dear <%- payer_name %>,
            </mj-text>

            <mj-text font-family="Segue, Arial">
                Congratulations! You are now a member of Wellai and have access to the AI-powered digital health assistant. <% if(hascode) {%> Here are your login code(s). <% } else { %> Here are your payment details. <% } %>
            </mj-text>

        </mj-column>
        </mj-section>

 


        <mj-section background-color="#e4e4e4">
        <mj-column>  
              
            <mj-text align="center" font-family="Segue, Arial" font-size="26px" font-weight="100">
                Download Application
            </mj-text>

        </mj-column>
        </mj-section>


        <mj-section background-color="#e4e4e4" padding-bottom="35px" padding-top="5px">
        <mj-column >
            <mj-image href="https://apps.apple.com/us/app/id1530556224" src="https://wellai.health/img/appstore.png" alt="Download on the App Store" width="120px"></mj-image>
            
        </mj-column>
        <mj-column >
            <mj-image href="https://play.google.com/store/apps/details?id=health.wellai.assistant" src="https://wellai.health/img/googleplaybadge.png" alt="Get it on Google Play" border="none" width="131px"></mj-image>
        </mj-column>
        </mj-section>


        <% _.each(items, function(item){ 
            
            var price = Number(item['price' + item.period])
            var k = '1 Month'

            var name = ''
            

            if(item.name == 'common') name = 'Wellai Assistant Plan'
            if(item.name == 'commoncallsbetatest') name = 'Wellai Assistant Plan With Calls / Beta'
            

            if(item.period == "Y") k = "1 Year"
            
            %> 

            <mj-section background-color="#e4e4e4" padding-bottom="15px">
                
                <mj-column>
                    <mj-text align="center" color="#20252a" font-size="15px" font-family="Ubuntu, Helvetica, Arial, sans-serif" padding-left="25px" padding-right="25px" padding-bottom="0px"><strong>Item</strong></mj-text>
                    <mj-text align="center" color="#20252a" font-size="13px" font-family="Helvetica" padding-left="25px" padding-right="25px" padding-bottom="20px" padding-top="10px"><%- name %></mj-text>
                </mj-column>

                <mj-column>
                    <mj-text align="center" color="#20252a" font-size="15px" font-family="Ubuntu, Helvetica, Arial, sans-serif" padding-left="25px" padding-right="25px" padding-bottom="0px"><strong>Details</strong></mj-text>
                    <mj-text align="center" color="#20252a" font-size="13px" font-family="Helvetica" padding-left="25px" padding-right="25px" padding-bottom="20px" padding-top="10px">$<%-price.toFixed(2)%> / <%-k%></mj-text>
                </mj-column>

                <% if(item.code) {%>

                    <mj-column>
                        <mj-text align="center" color="#0" font-size="15px" font-family="Ubuntu, Helvetica, Arial, sans-serif" padding-left="25px" padding-right="25px" padding-bottom="0px"><strong>Gift code</strong></mj-text>
                        <mj-text align="center" color="#20252a" font-size="36px" font-family="Helvetica" padding-left="25px" padding-right="25px" padding-bottom="20px" padding-top="10px"><%- item.code %></mj-text>
                    </mj-column>

                <% } else { %> 
                
                  
                <% } %>

            </mj-section>

        <% }) %>

        <mj-section>
            <mj-column>

                <mj-text font-family="Segue, Arial">
                    You can send codes to your gift recipients by using the SHARE button next to the code information.
                </mj-text>

                <mj-text font-family="Segue, Arial">
                    Thank you
                </mj-text>

            </mj-column>
        </mj-section>

        

        <mj-section>
            <mj-column>

                <mj-button font-family="Segue, Helvetica" background-color="#0059ff" color="white" href="https://wellai.health/payments?token=<%- token %>">
                    See details <% if(hascode) {%> and share codes <% } %>
                </mj-button>

            </mj-column>
        </mj-section>

    </mj-body>
</mjml>


